{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "build",
    "sourceMap": true,
    "moduleResolution": "node",
    "target": "ES6",
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules", "public"]
}
